<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.somanibrothersservices.lokalmall">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ViewAllActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".UpdateUserInfoActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".SearchActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".ProductDetailsActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".OrderDetailsActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".NotificationActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".MyAddressesActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".DeliveryActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".CategoryActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".AddAddressesActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".ChooseCityActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".ChooseStoreActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".MyMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>