<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_imageview_profile_image"
        android:layout_width="65sp"
        android:layout_height="65sp"
        app:civ_border_width="2sp"
        app:civ_border_color="@color/colorAccent"
        android:contentDescription="@string/nav_header_desc"
        android:elevation="3sp"
        app:layout_constraintBottom_toTopOf="@+id/main_textview_fullname"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_person_outline_black_24dp" />

    <TextView
        android:id="@+id/main_textview_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Not Signed-In"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/main_textView_mobile_no"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/main_textView_mobile_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>
